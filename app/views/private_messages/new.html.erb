<div class="global_wrapper">
  <div class="foreground_element">
    <h1>New message</h1>
  </div>

  <div class="foreground_element">
    <p>To: <%= @receiver.username %></p>

    <%= simple_form_for [@profile, @private_message] do |f| %>
      <%= f.input :body, label: false, placeholder: "Your message" %>
      <%= f.submit 'Send', class: 'btn btn-primary' %>
    <% end %>

  </div>
</div>
