<%= simple_form_for [@recipe, @amount] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :size %>
  <%= f.association :unit, label_method: :measurement %>
  <%= f.association :preparation_method, label: "Preparation (optional)" %>
  <%= f.input :optional %>
  <%= f.submit 'Add ingredient' %>
<% end %>
